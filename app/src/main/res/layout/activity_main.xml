<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#2589FF">

    <TextView
        android:id="@+id/crp_title"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:fontFamily="@font/baloo_da"
        android:text="Call Random People"
        android:textColor="#FFFF00"
        android:textSize="45dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo_da"
        android:text="Just a Friend you haven't called yet"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crp_title" />

    <Button
        android:id="@+id/btn_call_main"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_marginTop="110dp"
        android:background="@drawable/btn_call"
        android:fontFamily="@font/bowlby_one_sc"
        android:text="CALL"
        android:autoSizeTextType="uniform"
        android:textAlignment="center"
        app:backgroundTint="@null"
        android:textColor="#D4AF37"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crp_title"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="75dp"
        android:layout_marginRight="45dp"
        android:fontFamily="@font/baloo_da"
        android:gravity="center_horizontal"
        android:text="By Clicking this Button you will be directed to your dial screen with a random stranger number dialed waiting for you to Call"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_call_main" />

</androidx.constraintlayout.widget.ConstraintLayout>